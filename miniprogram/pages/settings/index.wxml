<view class="settings-container">
    <!-- 设置列表 -->
    <view class="settings-list">
        <view 
            wx:for="{{settingItems}}" 
            wx:key="id"
            class="setting-item"
            bindtap="{{item.type === 'arrow' ? 'onItemTap' : ''}}"
            data-id="{{item.id}}"
        >
            <view class="title">{{item.title}}</view>
            <view class="right">
                <switch 
                    wx:if="{{item.type === 'switch'}}"
                    checked="{{item.value}}"
                    bindchange="onSwitchChange"
                    data-id="{{item.id}}"
                    color="#07C160"
                />
                <text wx:if="{{item.type === 'arrow'}}" class="arrow">></text>
            </view>
        </view>
    </view>

    <!-- 退出登录按钮 -->
    <view class="logout-section">
        <button class="logout-btn" bindtap="onLogout">退出登录</button>
    </view>
</view> 
<view class="plus-container">
  <!-- 背景图区域 -->
  <view class="background-section">
    <image class="background-image" src="/assets/bg.svg" mode="widthFix" />
  </view>

  <!-- Logo区域 -->
  <view class="logo-section">
    <image class="motivation-logo" src="/assets/images/logo.svg" mode="widthFix" />
  </view>

  <!-- 标语区域 -->
  <view class="slogan-section">
    <text class="main-slogan">每一个坚持的日子</text>
    <text class="sub-slogan">都在让梦想更进一步</text>
    
    <view class="description">
      <text class="desc-text">21天养成一个习惯</text>
      <text class="desc-text">90天收获一个改变</text>
      <text class="desc-text">365天成就一个更好的自己</text>
    </view>
  </view>

  <!-- 按钮区域 -->
  <view class="action-section">
    <button class="create-btn" bindtap="createCheckin">立即创建目标</button>
  </view>
</view>
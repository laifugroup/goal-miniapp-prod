<view class="profile-container">
    <!-- 用户信息卡片 -->
    <view class="user-card">
        <view class="user-info">
            <image class="avatar" src="{{userInfo.avatarUrl || '/assets/images/default-avatar.svg'}}" mode="aspectFill" />
            <view class="info">
                <view class="name">{{userInfo.nickName || '未设置昵称'}}</view>
                <view class="bio">{{userInfo.bio || '这个人很懒，什么都没写~'}}</view>
            </view>
        </view>
        <view class="stats">
            <view class="stat-item">
                <text class="number">{{userInfo.checkinDays || 0}}</text>
                <text class="label">打卡天数</text>
            </view>
            <view class="stat-item">
                <text class="number" bindtap="navigateToPoints">{{userInfo.points || 0}}</text>
                <text class="label">积分</text>
            </view>
            <view class="stat-item">
                <text class="number">{{userInfo.level || 0}}</text>
                <text class="label">等级</text>
            </view>
        </view>
    </view>

    <!-- 菜单列表 -->
    <view class="menu-list">
        <view 
            wx:for="{{menuItems}}" 
            wx:key="id"
            class="menu-item"
            bindtap="onMenuItemTap"
            data-id="{{item.id}}"
        >
            <view class="left">
                <text class="icon">{{item.icon}}</text>
                <text class="title">{{item.title}}</text>
            </view>
            <view class="right">
                <text class="badge" wx:if="{{item.badge}}">{{item.badge}}</text>
                <text class="arrow">></text>
            </view>
        </view>
    </view>
</view> 
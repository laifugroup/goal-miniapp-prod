 .messages-container {
    height: 100vh;
    background-color: #f5f5f5;
}

.messages-list {
    padding: 20rpx;
}

.message-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
}

.message-item.unread {
  border-left: 8rpx solid #07C160;
}

.message-item.read {
  opacity: 0.8;
}


.left {
  flex: 1;
  min-width: 0;
  margin-right: 20rpx;
}

.title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.content {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.date {
  margin-right: 20rpx;
}


.unread-badge {
  padding: 4rpx 12rpx;
  background-color: #07C160;
  color: #fff;
  border-radius: 20rpx;
  font-size: 22rpx;
}


/* 文字截断样式 */
.line-ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: block;
}

.line-ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}



.loading-more,
.no-more {
    text-align: center;
    padding: 30rpx;
    font-size: 28rpx;
    color: #999;
}
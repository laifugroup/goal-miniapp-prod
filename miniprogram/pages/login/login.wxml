<view class="login-container">
    <view class="login-form">
        <view class="input-group">
            <input 
                type="text" 
                placeholder="请输入用户名" 
                bindinput="onUsernameInput"
                value="{{username}}"
            />
        </view>
        <view class="input-group">
            <input 
                type="password" 
                placeholder="请输入密码" 
                bindinput="onPasswordInput"
                value="{{password}}"
            />
        </view>
        <button class="login-btn" bindtap="handleLogin">登录</button>
    </view>
</view> 